<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1>スケジュール編集</h1>
      <%= form_with model: @event, url: event_path(@event), local:true do |f| %>
        <%= f.label "スケジュール名" %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label "スケジュール内容" %>
        <%= f.text_area :description, class: "form-control" %>
        <%= f.label "開始日時" %>
        <%= f.datetime_select :start_at, {}, class: "form-control datetime-form" %>
        <%= f.label "終了日時" %>
        <%= f.datetime_select :end_at, {}, class: "form-control datetime-form" %>
        <%= f.submit "保存", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>