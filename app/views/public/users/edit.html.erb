<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1>編集画面</h1>
      <%= form_with model: @user, local:true do |f| %>
        <%= f.label :プロフィール画像 %>
        <%= f.attachment_field :profile_image %>
        <%= f.label :名前 %>
        <%= f.text_field :name %>
        <%= f.label :自己紹介 %>
        <%= f.text_field :introduction %>
        <%= f.submit "保存" %>
      <% end %>
    </div>
  </div>
</div>