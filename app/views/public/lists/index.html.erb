<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 my-5">
      <p><%= link_to "投稿へ", new_list_path %></p>
      <h1 class = "mb-5">List</h1>
      <table class = "table table-hover">
        <thead>
          <tr>
            <th>User</th>
            <th>List</th>
            <th class = "text-center">Comment/Favorite
            </th>
          </tr>
        </thead>
        <tbody>
          <% @lists.each do |list| %>
          <tr>
            <td class = "align-middle">
              <%= link_to mypage_path(list.user) do %>
                <%= attachment_image_tag list.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class: "mb-2" %><br />
                <%= list.user.name %>
              <% end %>
            </td>
            <td style = "width: 60%">
              <%= link_to list.date.strftime('%Y/%m/%d'), list_path(list) %><br />
              <%= list.first_item %><br />
              <%= list.second_item %><br />
              <%= list.third_item %>
            </td>
            <td class = "text-center align-middle", style = "width: 20%">
              <i class="far fa-comment"><%= list.list_comments.count %></i>
              <i class="fas fa-star"><%= list.favorites.count %></i>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>