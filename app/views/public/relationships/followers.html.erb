<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1>Follower Users</h1>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
            <%= user.name %>
          <% end %>
          フォロー<%= user.followings.count %>
          フォロワー<%= user.followers.count %>
        <% end %>
      <% else %>
        <p>ユーザはいません</p>
      <% end %>
    </div>
  </div>
</div>