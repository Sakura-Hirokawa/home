<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1><%= @user.name %>さんのユーザ詳細</h2>
      <table class = "table table-striped">
        <tbody>
          <tr>
            <th>ユーザID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>ユーザステータス</th>
            <td>
              <% if @user.is_deleted %>
                <p class= "text-secondary">退会</p>
              <% else %>
                <p class = "text-success">有効</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th>投稿数</th>
            <td><%= @user.lists.count %></td>
          </tr>
          <tr>
            <th>フォロー</th>
            <td><%= @user.followings.count %></td>
          </tr>
          <tr>
            <th>フォロワー</th>
            <td><%= @user.followers.count %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user) %>
      投稿一覧をみる
    </div>
  </div>
</div>