<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1><%= @user.name %>さんのユーザ編集</h1>
      <table class = "table table-striped">
        <tbody>
          <%= form_with model: [:admin, @user], local:true do |f| %>
          <tr>
            <th>ユーザID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th>ユーザステータス</th>
            <td>
              <%= f.radio_button :is_deleted, :false %>有効
              <%= f.radio_button :is_deleted, :true %>退会
            </td>
          </tr>
          <tr>
            <th colspan = "1"></th>
            <td><%= f.submit "保存" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>