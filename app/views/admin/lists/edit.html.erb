<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h1><%= @user.name %>さんの投稿編集</h1>
      <%= @list.date %>
      <%= @list.first_item %>
      <%= @list.second_item %>
      <%= @list.third_item %>
      <%= link_to "削除", admin_list_path(@list), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      
      いいね数<%= @list.favorites.count %>

      <div class = "comments">
        <% @list.list_comments.each do |list_comment| %>
          <%= link_to admin_user_path(list_comment.user) do %>
            <%= attachment_image_tag list_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
            <%= list_comment.user.name %>
          <% end %>
          <%= list_comment.comment %>
          <%= list_comment.created_at.strftime('%Y/%m/%d') %>
          <%= link_to "削除", admin_list_list_comment_path(list_comment.list_id, list_comment.id), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>